<h1><%%=_ "Editing %s", <%= model_name %>.human_name %></h1>

<%%= error_messages_for :<%= singular_name %> %>

<%% form_for(:<%= singular_name %>, :url => <%= singular_name %>_path(@<%= singular_name %>), :html => { :method => :put }) do |f| %>
  <fieldset>
<% for attribute in attributes -%>
    <p>
      <label for="<%= model_name + "_" + attribute.name %>"><%%= <%= model_name %>.human_attribute_name("<%= attribute.name%>") %></label>
      <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
    </p>

<% end -%>
  </fieldset>
  <p>
    <%%= submit_tag _("Update") %>
  </p>
<%% end %>

<%%= link_to _('View'), <%= singular_name %>_path(@<%= singular_name %>) %> |
<%%= link_to _('Back'), <%= plural_name %>_path %>
